{
    "name": "mpietrucha/zed-laravel-pint",
    "description": "Format code inside Zed editor using Laravel Pint.",
    "license": "MIT",
    "type": "library",
    "version": "1.0.0",
    "authors": [
        {
            "name": "MichaÅ‚ Pietrucha",
            "email": "michal.pietrucha@off-site.pl"
        }
    ],
    "require": {
        "php": "^8.2",
        "composer": "^2.8.9",
        "illuminate/support": "^12.17",
        "laravel/pint": "^1.22",
        "nyholm/psr7": "^1.8",
        "psr/http-message": "^2.0",
        "symfony/process": "^7.3"
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^3.0",
        "ergebnis/composer-normalize": "^2.47",
        "phpstan/phpstan": "^2.1",
        "symfony/var-dumper": "^7.3"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Mpietrucha\\Zed\\Pint\\": "src/"
        }
    },
    "bin": "bin/zed-pint",
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        },
        "sort-packages": true
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "@compile",
                "@compile:clear"
            ]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "cghooks add --ignore-lock",
            "@prettier:config"
        ],
        "post-update-cmd": [
            "cghooks update",
            "composer normalize"
        ],
        "compile": "box compile --quiet",
        "compile:clear": "git add bin/zed-pint > /dev/null",
        "prettier:config": "curl -sSL https://raw.githubusercontent.com/mpietrucha/prettier-config-synchronizer/refs/heads/main/synchronize | bash"
    }
}
