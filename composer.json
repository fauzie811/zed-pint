{
    "version": "1.0.0",
    "name": "mpietrucha/zed-laravel-pint",
    "description": "Format code inside Zed editor using Laravel Pint.",
    "license": "MIT",
    "bin": "bin/zed-pint",
    "type": "library",
    "authors": [
        {
            "name": "Micha≈Ç Pietrucha",
            "email": "michal.pietrucha@off-site.pl"
        }
    ],
    "require": {
        "php": "^8.2",
        "composer": "^2.8.9",
        "illuminate/support": "^12.17",
        "laravel/pint": "^1.22",
        "nyholm/psr7": "^1.8",
        "psr/http-message": "^2.0",
        "symfony/process": "^7.3"
    },
    "autoload": {
        "psr-4": {
            "Mpietrucha\\Zed\\Pint\\": "src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^3.0",
        "phpstan/phpstan": "^2.1",
        "symfony/var-dumper": "^7.3"
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "box compile",
                "git add bin/zed-pint"
            ]
        }
    }
}
